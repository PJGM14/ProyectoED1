@using microSQL_Chian_Garcia.Instancia


<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        ul, #myUL {
            list-style-type: none;
        }

        #myUL {
            padding: 0;
        }

        .caret {
            cursor: pointer;
            border-top: none;
            margin-left: 25px;
            -webkit-user-select: none; /* Safari 3.1+ */
            -moz-user-select: none; /* Firefox 2+ */
            -ms-user-select: none; /* IE 10+ */
            user-select: none;
        }

        .caret:before {
            content: "\2022";
            /*color: #00bc8c;*/
            color: white;
            display: inline;
            margin-right: 6px;
        }

        .caret-down:before {
            -ms-transform: rotate(90deg); /* IE 9 */
            -webkit-transform: rotate(90deg); /* Safari */
            transform: rotate(90deg);
        }

        .nested {
            display: none;
            margin-left: 25px;
        }

        .active {
            display: block;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="panel panel-warning">
        <div class="panel-heading">
            <h3 class="panel-title">Tablas creadas</h3>
        </div>
        <div class="panel-body">
            <ul id="myUL">
                <li>
                    <span class="caret">Tabla1</span>
                    <ul class="nested">
                        <li>Columna1</li>
                        <li>Columna2</li>
                        @*<li>
                                <span class="caret">Tea</span>
                                <ul class="nested">
                                    <li>Black Tea</li>
                                    <li>White Tea</li>
                                </ul>
                            </li>*@
                    </ul>
                </li>
                <li>
                    <span class="caret">Tabla2</span>
                    <ul class="nested">
                        <li>Columna1</li>
                        <li>Columna1</li>
                        @*<li>
                                <span class="caret">Tea</span>
                                <ul class="nested">
                                    <li>Black Tea</li>
                                    <li>White Tea</li>
                                </ul>
                            </li>*@
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    
    <script>
        var toggler = document.getElementsByClassName("caret");
        var i;

        for (i = 0; i < toggler.length; i++) {
            toggler[i].addEventListener("click", function () {
                this.parentElement.querySelector(".nested").classList.toggle("active");
                this.classList.toggle("caret-down");
            });
        }
    </script>

</body>