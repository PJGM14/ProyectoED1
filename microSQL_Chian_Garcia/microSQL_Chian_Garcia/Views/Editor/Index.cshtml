@using microSQL_Chian_Garcia.Instancia
@model microSQL_Chian_Garcia.Models.Editor

@{
    ViewBag.Title = "Editor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

@if (Data.Instancia.Ingreso == 1)
{
    @Html.Partial("_InfoArchivoInicial")
}

<div class="row">

    <h3 class="col-lg-7 pull-right">Editor</h3>


    @using (Html.BeginForm("Ejecutar", "Editor"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="col-xs-4 pull-left">
                    <br />
                    <br />
                    <br />@Html.Partial("_TreeView")
                </div>

                <div class="col-lg-7 pull-right">
                    @Html.TextAreaFor(model => model.TextoPantalla, 20, 100, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TextoPantalla, "", new { @class = "text-danger" })
                </div>
                
                <div class="form-group">
                    <div class="col-lg-7 pull-right">
                        <input type="submit" value="Ejecutar" class="btn btn-success" />
                    </div>
                </div>
            </div>
            <br />
            @Html.Partial("_TablaSelect")

        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
